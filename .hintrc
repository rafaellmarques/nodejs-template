{
    "extends": ["accessibility", "development"],
    "formatters": ["html", "summary"],
    "hints": {
        "button-type": "error",
        "compat-api/css": "error",
        "compat-api/html": [
            "error",
            {
                "ignore": ["meta[name=theme-color]"]
            }
        ],
        "css-prefix-order": "error",
        "manifest-exists": "error",
        "manifest-file-extension": "error",
        "manifest-is-valid": "error",
        "meta-charset-utf-8": "error",
        "meta-viewport": "error",
        "no-bom": "error",
        "no-inline-styles": [
            "warning",
            {
                "requireNoStyleElement": true
            }
        ]
    },
    "parsers": ["css", "html", "javascript"]
}
